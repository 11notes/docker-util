#!/bin/sh
  # will change existing docker user uid 1000 and gid 1000 to 99 and 100 for unraid compatibility
  # eleven unraid

  find / -not -path "/proc/*" -user 1000 -exec chown -h -R 99:100 {} \;
  find / -not -path "/proc/*" -group 1000 -exec chown -h -R 99:100 {} \;
  groupdel -f docker
  usermod -u 99 docker
  usermod -g 100 docker
  groupmod -n docker users